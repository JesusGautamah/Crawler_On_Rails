<!DOCTYPE html>
<html>
  <head>
    <title>CrawlerOnRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-4R6DWFY725"></script>
    <script>
       window.dataLayer = window.dataLayer || [];
       function gtag(){dataLayer.push(arguments);}
       gtag('js', new Date());

       gtag('config', 'G-4R6DWFY725');
    </script>



  </head>

  <body>
    <section class="crawler">
      <div class="container-fluid section-bg text-center" style="padding: 50px; width: 80%;"> 
        <div class="container-fluid border-gradient border-gradient-purple text-center " id="crawler-container" style="padding: 50px;">
          <div class="container">

            <%= yield %>

          </div>
        </div>
      </div>
    </section>
  </body>
</html>
